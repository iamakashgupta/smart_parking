rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to make rules more readable.
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // USERS: Users can read and write to their own user document.
    // This allows them to update their profile and manage their vehicles.
    match /users/{userId} {
      allow read, update, create: if isSignedIn() && isOwner(userId);
    }
    
    // PARKING LOTS: Any user (signed in or not) can read parking lot data.
    // This is necessary for users to browse lots before logging in.
    // For this prototype, any signed-in user can create, update, or delete lots.
    // In a production app, this would be restricted to an 'admin' role.
    match /parking_lots/{lotId} {
      allow read: if true;
      allow write: if isSignedIn(); // Permissive for prototype
    }
    
    // SLOTS: Any user (signed in or not) can read slot information.
    // This allows for real-time occupancy updates on the UI.
    // Writing is restricted to signed-in users (for booking or simulation).
    match /parking_lots/{lotId}/slots/{slotId} {
      allow read: if true;
      allow write: if isSignedIn(); // Permissive for prototype
    }

    // BOOKINGS: This is a top-level collection.
    match /bookings/{bookingId} {
      // A user can create their own booking.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // A user can read THEIR OWN booking document, or any signed-in user (admin) can read any document.
      // This is crucial for allowing the admin 'list' query to work.
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || true);
      
      // A list operation requires that the query constraints match the read permissions.
      // A user query must filter by their UID. An admin query can list all.
      allow list: if isSignedIn();
      
      // Only the user who owns the booking can modify it.
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
