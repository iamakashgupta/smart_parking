rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users: Can read/write their own profile.
    match /users/{userId} {
      allow read, update: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
    }
    
    // User Vehicles: Can manage their own vehicles.
    match /users/{userId}/vehicles/{vehicleId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    // User Bookings: Can manage their own bookings.
    match /users/{userId}/bookings/{bookingId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Top-level bookings collection for admin queries
    match /bookings/{bookingId} {
      // Allow user to create their own booking document here
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Allow admins (or for now, any signed-in user) to read all bookings
      allow read: if isSignedIn(); 
    }

    // Parking Lots: Any signed-in user can read lot information.
    // Writing to lots is restricted to admins (for now, any signed-in user can write for prototype)
    match /parking_lots/{lotId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    // Slots: Any signed-in user can read slot info for real-time updates.
    // Writing to slots is restricted.
    match /parking_lots/{lotId}/slots/{slotId} {
      allow read: if isSignedIn();
      // Allow updates (e.g. isOccupied) if the user is signed in.
      // This is permissive for the prototype. In production, this would be a specific role.
      allow update: if isSignedIn();
      allow write: if isSignedIn();
    }
  }
}
