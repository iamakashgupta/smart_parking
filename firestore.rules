/**
 * @file Firestore Security Rules
 * @description DEVELOPMENT-ONLY ruleset. This is completely insecure and allows
 *              all reads and writes. It is intended only for the initial
 *              prototyping phase to prevent permission errors.
 *              DO NOT USE IN PRODUCTION.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all reads and writes to all collections.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
