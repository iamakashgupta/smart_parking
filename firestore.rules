rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to make rules more readable.
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // USERS: Users can read and write to their own user document.
    // This allows them to update their profile and manage their vehicles.
    match /users/{userId} {
      allow read, update: if isSignedIn() && isOwner(userId);
      // Allow creation of a user document only if the user is signed in
      // and the document ID matches their UID. This happens on first sign up.
      allow create: if isSignedIn() && request.auth.uid == userId;
    }
    
    // PARKING LOTS: Any user (signed in or not) can read parking lot data.
    // This is necessary for users to browse lots before logging in.
    // For this prototype, any signed-in user can create, update, or delete lots.
    // In a production app, this would be restricted to an 'admin' role.
    match /parking_lots/{lotId} {
      allow read: if true;
      allow write: if isSignedIn(); // Permissive for prototype
    }
    
    // SLOTS: Any user (signed in or not) can read slot information.
    // This allows for real-time occupancy updates on the UI.
    // Writing is restricted to signed-in users (for booking or simulation).
    match /parking_lots/{lotId}/slots/{slotId} {
      allow read: if true;
      allow write: if isSignedIn(); // Permissive for prototype
    }

    // BOOKINGS: This is a top-level collection for easier admin queries.
    // A user can create a booking if they are signed in and the booking's userId matches their own.
    // Users can read their own bookings from this collection.
    // Admins would have broader read access.
    match /bookings/{bookingId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      // For the admin panel, we need a way to list all bookings.
      // A more secure rule would check for an admin claim. For now, any signed-in user can list.
      allow list: if isSignedIn(); 
    }
  }
}
