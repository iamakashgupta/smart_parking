rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to make rules more readable.
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // USERS: Users can read and write to their own user document.
    // This allows them to update their profile and manage their vehicles.
    match /users/{userId} {
      allow read, update, create: if isSignedIn() && isOwner(userId);
    }
    
    // PARKING LOTS: Any user (signed in or not) can read parking lot data.
    // This is necessary for users to browse lots before logging in.
    // For this prototype, any signed-in user can create, update, or delete lots.
    // In a production app, this would be restricted to an 'admin' role.
    match /parking_lots/{lotId} {
      allow read: if true;
      allow write: if isSignedIn(); // Permissive for prototype
    }
    
    // SLOTS: Any user (signed in or not) can read slot information.
    // This allows for real-time occupancy updates on the UI.
    // Writing is restricted to signed-in users (for booking or simulation).
    match /parking_lots/{lotId}/slots/{slotId} {
      allow read: if true;
      allow write: if isSignedIn(); // Permissive for prototype
    }

    // BOOKINGS: This is a top-level collection.
    // A user can create their own booking.
    // A user can read THEIR OWN booking documents.
    // An "admin" (any signed-in user for this prototype) can list and read ALL bookings.
    match /bookings/{bookingId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Separate rule for user vs admin reads.
      // A user can read their own.
      // An "admin" (any signed-in user) can read any booking, which is needed for the list to work.
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isSignedIn());
      
      // This list rule is for the admin panel. It allows any signed-in user to query the collection.
      // The read rule above ensures the query can actually access the documents.
      allow list: if isSignedIn();
      
      // Update and delete are more restrictive. Only the user who owns the booking can modify it.
      // (Or an admin, which we can add later with custom claims).
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
