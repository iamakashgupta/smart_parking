rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to make rules more readable.
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // USERS: Publicly readable for this prototype.
    // Users can only write to their own document.
    match /users/{userId} {
      allow read: if true;
      allow update, create: if isSignedIn() && isOwner(userId);
    }
    
    // PARKING LOTS: Publicly readable.
    // For this prototype, any signed-in user can write to lots.
    match /parking_lots/{lotId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // SLOTS: Publicly readable for real-time occupancy.
    // For this prototype, any signed-in user can write to slots.
    match /parking_lots/{lotId}/slots/{slotId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // BOOKINGS: Users can only create their own bookings.
    // For this prototype, any signed-in user can read any booking to solve admin panel issues.
    match /bookings/{bookingId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Allow reads from anywhere, this is useful for public assets
    match /{allPaths=**} {
      allow read;
    }
    // Allow authenticated users to write to their own folder in `profile-photos`
    match /profile-photos/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
